<div class='encabezado'>
    <h3 class="ui center aligned icon header">
    <i class="circular coffee icon blue"></i>
    Prueba escribiendo algo!
    </h3>
</div>

<div class="ui four column grid">
    <div class="one wide column"></div>
    <div class="ten wide column">
         <div class="ui card fluid raised card chat">
            <div class="content" id='mensajez'>
                <div class="ui feed" id='mensaje-contenedor'>
                    <%= render @messages %>
                </div>
            </div>

            <div class="extra content">
                <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, method: "POST", remote: true) do |f| %>

                    <div class="field">
                        <div class="ui blue fluid icon input">
                            <%= f.text_field :body, placeholder:'Escribe un mensaje...' %>
                            <%= f.button '<i class="bordered inverted blue icon edit"></i>'.html_safe %>
                            <%# <i class="bordered inverted blue icon edit"></i> %>
                        </div>
                    </div>
                <% end %>
                <%# <form class="ui reply form">
                    <div class="field">
                        <div class="ui blue fluid icon input">
                             <input type="text" placeholder="Escribe un mensaje...">
                            <i class="bordered inverted blue icon edit"></i>
                        </div>
                    </div>
                   
                </form> %>
            </div>

        </div>
    </div>

    <div class="four wide column">
        <div class="ui card fluid raised card chat">
            <div class="content">
                <div class="ui inverted vertical menu">
                    <a class="item">
                        Home
                    </a>
                    <a class="item active">
                        Messages
                    </a>
                    <a class="item">
                        Friends
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="one wide column"></div>

</div>